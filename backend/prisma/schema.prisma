generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Worker {
  id            String   @id @default(cuid())
  workerId      String   @unique
  firstName     String
  lastName      String
  email         String   @unique
  department    String
  jobTitle      String
  hireDate      DateTime
  birthDate     DateTime
  salary        Decimal  @db.Decimal(12,2)
  managerId     String?
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  enrollments   Enrollment[]
  timeEntries   TimeEntry[]
}

model Enrollment {
  id            String   @id @default(cuid())
  workerId      String
  planType      String
  coverageLevel String
  employeePrem  Decimal  @db.Decimal(12,2)
  employerPrem  Decimal  @db.Decimal(12,2)
  effectiveDate DateTime
  worker        Worker   @relation(fields: [workerId], references: [workerId])
}

model TimeEntry {
  id        String   @id @default(cuid())
  workerId  String
  date      DateTime
  hours     Decimal  @db.Decimal(5,2)
  timeType  String
  worker    Worker   @relation(fields: [workerId], references: [workerId])
}

model IntegrationRun {
  id        String   @id @default(cuid())
  type      String
  status    String
  startedAt DateTime @default(now())
  endedAt   DateTime?
  detailUrl String?
  errorsCsv String?
  meta      Json
}

model AuditLog {
  id        String   @id @default(cuid())
  actor     String
  action    String
  entity    String
  entityId  String
  before    Json?
  after     Json?
  reason    String?
  createdAt DateTime @default(now())
}

model BusinessProcess {
  id        String   @id @default(cuid())
  kind      String
  targetId  String
  state     String
  context   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
